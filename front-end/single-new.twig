<!DOCTYPE html>
<html lang="en">

{% include 'parts/head.twig' %}

<body>
  <div class="container-fluid">
    <!-- blacknavbar -->

      {% include 'parts/blacknavbar.twig' %}

    <!-- end blacknavbar -->

    <!-- hamburger menu -->

      {% include 'parts/hamburger-menu.twig' %}

    <!-- end hamburger menu -->

    <!-- slider -->

      {% include 'parts/slider.twig' %}

    <!-- end slider -->

    <!-- whitenavbar -->

      {% include 'parts/whitenavbar.twig' %}

    <!-- end whitenavbar -->

    <!-- article -->
    <div class="container">
      <div class="row">
        <div class="col-md-9">
          <div class="article">
            <div class="Headimage">
              <img src="front-end/pictures/second.jpg" class="img-fluid" height="486" width="900">
            </div>
            <div class="comment">
              <div class="head">
                <h2 class="head2"><a href="#">{{ news.title }}</a></h2>
                <div class="after-heading">
                  <span><a href="#"><i class="fa fa-calendar" aria-hidden="true"></i> 26. JAUNARA 2018</a></span>
                  <span><a href="#"><i class="fa fa-user" aria-hidden="true"></i> UREDNIK</a></span>
                  <span><a href="#"><i class="fa fa-comment-o" aria-hidden="true"></i> 0 COMMENT</a></span>
                </div>
              </div>
              <div class="post-text">
                <p>{{ news.content }}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- end article -->

    <!-- related posts -->
    <div class="container">
      <div class="row col-md-9 related">
        <div>
          <h2 class="related-post">
            RELATED POSTS
          </h2>
        </div>
      </div>
      <div class="row col-md-9">
          {% for three in lastThree %}
        <div class="col-md-4">
          <div class="article">
            <div class="Headimage">
              <img src="front-end/pictures/second.jpg" class="img-fluid" height="486" width="900">
            </div>
            <div class="comment">
              <div class="head">
                <h2 class="single-new-head3"><a href="#">{{ three.title }}</a></h2>
                <div class="after-heading">
                  <span><a href="#"><i class="fa fa-calendar" aria-hidden="true"></i> 26. JAUNARA 2018</a></span>
                  <span><a href="#"><i class="fa fa-user" aria-hidden="true"></i> UREDNIK</a></span>
                </div>
              </div>
              <div class="single-related-text">
                <p>{{ three.content }}</p>
              </div>
            </div>
          </div>
        </div>
          {% endfor %}
      </div> 
      <div class="row col-md-9 related">
        <div>
          <h2 class="related-post">
            LEAVE A COMMENT
          </h2>
        </div>
      </div> 
      <div class="row col-md-9">
        <form class="col-md-8 contact-form">
          <div class="form-group">
            <label for="name">Ime</label>
            <input class="form-control" type="text" id="name" placeholder="Unesite Ime">
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Unesite Email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>
          <div class="form-group">
            <label for="name">Naslov</label>
            <input class="form-control" type="text" id="name" placeholder="Unesite Naslov">
          </div>
          <div class="form-group">
            <label for="textArea">Va≈°a Poruka</label>
            <textarea class="form-control" id="textArea" rows="10"></textarea>
          </div>
          <button type="submit" class="singleform-button">Add a Comment</button>
        </form>
      </div>  
    </div>
    <!-- end related posts -->

    <!-- footer -->

      {% include 'parts/footer.twig' %}

    <!-- end footer -->

  </div>
</body>

<script src="front-end/js/script.js"></script>
</html>