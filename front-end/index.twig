      <div class="row">

        <!-- article -->
        <div class="col-md-9">
          {% for new in news %}
          <div class="article">
            <div>
              <a href="/single-news/{{ new.id }}"><img src="front-end/pictures/second.jpg" class="img-fluid" height="486" width="900"></a>
            </div>
            <div class="comment">
              <div class="head">
                <h2 class="head2"><a href="#">{{ new.title }}</a></h2>
                <div class="after-heading">
                  <span><a href="#"><i class="fa fa-calendar" aria-hidden="true"></i> 26. JAUNARA 2018</a></span>
                  <span><a href="#"><i class="fa fa-user" aria-hidden="true"></i> UREDNIK</a></span>
                  <span><a href="#"><i class="fa fa-comment-o" aria-hidden="true"></i> 0 COMMENT</a></span>
                </div>
              </div>
              <div class="post-text">
                <p>{{ new.content }}</p>
