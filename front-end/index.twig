                </div>
              </div>
            </div>
          </aside>
          <!-- end search-->

          <!-- recent posts-->
          <aside>
            <h3 class="heading3">NEDAVNO OBJAVLJENO</h3>
            <ul class="recent-posts">
                {% for five in lastFive %}
              <li class="link-sidebar"><a href="/single-news/{{ five.id }}"><img class="sideBarimage" src="front-end/pictures/image1.jpg"><span>{{ five.title }}</span></a></li>
              {% endfor %}
            </ul>
          </aside>
          <!-- end recent posts-->

          <!-- category -->
          <aside>
            <h3 class="heading3">KATEGORIJE</h3>
              {% for category in categories %}
            <ul class="categoryList">
              <li><a href="#">{{ category.category_name }}</a></li>
            </ul>
              {% endfor %}
          </aside>
          <!-- end category -->  

        </div>
        <!-- end sidebar-->

