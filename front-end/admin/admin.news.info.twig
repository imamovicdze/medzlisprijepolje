<div class="container">
    <h2>Vest</h2>
    <p>Naslov i Tekst</p>
    <table class="table table-dark table-striped">
            <thead>
            <tr>
                <th class="news-buttons">
                    <span><i>NASLOV:   </i></span>{{ news.title }}
                    <a href="/news/delete/{{ news.id }}" class="btn btn-outline-danger float-right" role="button">Delete</a>
                    <a href="/admin/news/update/{{ news.id }}" class="btn btn-outline-primary float-right" role="button">Edit</a>
                </th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ news.content }}</td>
            </tr>
            </tbody>
    </table>
</div>

